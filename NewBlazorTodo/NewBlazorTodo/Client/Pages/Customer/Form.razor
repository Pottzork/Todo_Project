<EditForm Model="@customer" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Name :</label>
        <div>
            <InputText @bind-Value="@customer.Name" />
            <ValidationMessage For="@(() => customer.Name)" />
        </div>
    </div>
    <div class="form-group">
        <label>Email :</label>
        <div>
            <InputText @bind-Value="@customer.Email" />
            <ValidationMessage For="@(() => customer.Email)" />
        </div>
    </div>
    <div class="form-group">
        <label>PhoneNumber :</label>
        <div>
            <InputText @bind-Value="@customer.Phone" />
            <ValidationMessage For="@(() => customer.Phone)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Company Name :</label>
            <div>
                <InputText @bind-Value="@customer.Company" />
                <ValidationMessage For="@(() => customer.Company)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Address :</label>
            <div>
                <InputText @bind-Value="@customer.Address" />
                <ValidationMessage For="@(() => customer.Address)" />
            </div>
        </div>
    </div>


    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>

</EditForm>


@code {
    [Parameter] public Customers customer { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}