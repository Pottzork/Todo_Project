@inject NavigationManager uriHelper
<EditForm Model="@customer" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Namn på Företag :</label>
        <div>
            <InputText @bind-Value="@customer.Company" />
            <ValidationMessage For="@(() => customer.Company)" />
        </div>
    </div>
    <div class="form-group">
        <label>Kontaktperson :</label>
        <div>
            <InputText @bind-Value="@customer.Name" />
            <ValidationMessage For="@(() => customer.Name)" />
        </div>
    </div>
    <div class="form-group">
        <label>Telefonnummer :</label>
        <div>
            <InputText @bind-Value="@customer.Phone" />
            <ValidationMessage For="@(() => customer.Phone)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Epost :</label>
            <div>
                <InputText @bind-Value="@customer.Email" />
                <ValidationMessage For="@(() => customer.Email)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>FöretagsAddress :</label>
            <div>
                <InputText @bind-Value="@customer.Street" />
                <ValidationMessage For="@(() => customer.Street)" />
            </div>
        </div>
    </div>

    <div class="form-group ">
        <div>
            <label>PostNummer :</label>
            <div>
                <InputText @bind-Value="@customer.PostalCode" />
                <ValidationMessage For="@(() => customer.PostalCode)" />
            </div>
        </div>
    </div>

    <div class="form-group ">
        <div>
            <label>Stad :</label>
            <div>
                <InputText @bind-Value="@customer.City" />
                <ValidationMessage For="@(() => customer.City)" />
            </div>
        </div>
    </div>


    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
    <button class="btn btn-dark" @onclick="@GetBackOnePage">Ångra</button>
</EditForm>


@code {
    [Parameter] public Customers customer { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Spara";
    [Parameter] public EventCallback OnValidSubmit { get; set; }


    public void GetBackOnePage()
    {
        uriHelper.NavigateTo("customerlist");
    }
}

