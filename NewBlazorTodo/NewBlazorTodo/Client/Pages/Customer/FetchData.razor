@page "/customerlist"
@inject HttpClient client
@inject IJSRuntime js


@if (SetCurrentUser.IsAuthenticated == true)
{<h3>Företagskunder</h3>

    <div class="form-group">
        <a class="btn btn-success" href="customer/create"><i class="oi oi-plus"></i> Lägg till ny kund</a>
    </div>
}
else
{
    <h3>User authentication token not found. Please log in..</h3>
}

<br>

@if (CustomerList == null)
{
    <div class="spinner"></div>
}
else if (CustomerList.Count == 0)
{
    <div class="spinner"></div>
}
else if (SetCurrentUser.IsAuthenticated == true)
{
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Företagskund</th>
                    <th>KontaktPerson</th>
                    <th>Telefonnummer</th>
                    <th>Stad</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Customers customer in CustomerList)
                {
                    @if (customer.City != "DONT") //IF sats pga <InputSelect> tar inte första ID.
                    {
                        <tr>
                            <td>@customer.Company</td>
                            <td>@customer.Name</td>
                            <td>@customer.Phone</td>
                            <td>@customer.City</td>
                            <td>
                                <a class="btn btn-success" href="customer/details/@customer.Id">Mer Info</a>
                                @*<button class="btn btn-danger" @onclick="@(() => Delete(customer.Id))">Delete</button>*@
                            </td>
                        </tr>
                    }

                }

            </tbody>
        </table>
    }
}

@code {
    List<Customers> CustomerList { get; set; }
    protected override async Task OnInitializedAsync()
    {
        CustomerList = await client.GetFromJsonAsync<List<Customers>>("https://webapitodo20200919020315.azurewebsites.net/api/customers");
    }

}