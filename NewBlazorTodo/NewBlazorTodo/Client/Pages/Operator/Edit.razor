@page "/operator/edit/{Id:int}"
@inject HttpClient http
@inject NavigationManager uriHelper
@inject IJSRuntime js
<h3>Edit</h3>
<Form ButtonText="Update" o="o"
      OnValidSubmit="@EditOperator" />
@code {
    [Parameter] public int Id { get; set; }
    Operators o = new Operators();
    protected async override Task OnParametersSetAsync()
    {
        o = await http.GetFromJsonAsync<Operators>($"https://localhost:44374/api/operators/ {Id}");
    }
    async Task EditOperator()
    {
        await http.PutAsJsonAsync("https://localhost:44374/api/operators", o);
        await js.InvokeVoidAsync("alert", $"Updated {o.FirstName} {o.LastName} With ID: {o.Id} Successfully!");
        uriHelper.NavigateTo("operatorlist");
    }
}