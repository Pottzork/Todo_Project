<EditForm Model="@o" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>UserName :</label>
        <div>
            <InputText @bind-Value="@o.UserName" />
            <ValidationMessage For="@(() => o.UserName)" />
        </div>
    </div>
    <div class="form-group">
        <label>Password :</label>
        <div>
            <InputText @bind-Value="@o.Password" />
            <ValidationMessage For="@(() => o.Password)" />
        </div>
    </div>
    <div class="form-group">
        <label>FirstName :</label>
        <div>
            <InputText @bind-Value="@o.FirstName" />
            <ValidationMessage For="@(() => o.FirstName)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Last :</label>
            <div>
                <InputText @bind-Value="@o.LastName" />
                <ValidationMessage For="@(() => o.LastName)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Email :</label>
            <div>
                <InputText @bind-Value="@o.Email" />
                <ValidationMessage For="@(() => o.Email)" />
            </div>
        </div>
    </div>

    <div class="form-group ">
        <div>
            <label>Phone :</label>
            <div>
                <InputText @bind-Value="@o.Phone" />
                <ValidationMessage For="@(() => o.Phone)" />
            </div>
        </div>
    </div>

    <div class="form-group ">
        <div>
            <label>Location :</label>
            <div>
                <InputText @bind-Value="@o.Location" />
                <ValidationMessage For="@(() => o.Location)" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>

</EditForm>


@code {
    [Parameter] public Operators o { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}