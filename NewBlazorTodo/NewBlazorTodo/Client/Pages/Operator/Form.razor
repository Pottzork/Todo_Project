<EditForm Model="@techOp" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Username :</label>
        <div>
            <InputText @bind-Value="@techOp.UserName" />
            <ValidationMessage For="@(() => techOp.UserName)" />
        </div>
    </div>
    <div class="form-group">
        <label>Password :</label>
        <div>
            <InputText @bind-Value="@techOp.Password" />
            <ValidationMessage For="@(() => techOp.Password)" />
        </div>
    </div>
    <div class="form-group">
        <label>First Name :</label>
        <div>
            <InputText @bind-Value="@techOp.FirstName" />
            <ValidationMessage For="@(() => techOp.FirstName)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Last Name :</label>
            <div>
                <InputText @bind-Value="@techOp.LastName" />
                <ValidationMessage For="@(() => techOp.LastName)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Email :</label>
            <div>
                <InputText @bind-Value="@techOp.Email" />
                <ValidationMessage For="@(() => techOp.Email)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Phone Number :</label>
            <div>
                <InputText @bind-Value="@techOp.Phone" />
                <ValidationMessage For="@(() => techOp.Phone)" />
            </div>
        </div>
    </div>

    <div class="form-group ">
        <div>
            <label>Location :</label>
            <div>
                <InputText @bind-Value="@techOp.Location" />
                <ValidationMessage For="@(() => techOp.Location)" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>

</EditForm>


@code {
    [Parameter] public Operators techOp { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}