@inject NavigationManager uriHelper
<EditForm Model="@o" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Förnamn :</label>
        <div>
            <InputText @bind-Value="@o.FirstName" />
            <ValidationMessage For="@(() => o.FirstName)" />
        </div>
    </div>
    <div class="form-group">
        <label>Efternamn :</label>
        <div>
            <InputText @bind-Value="@o.LastName" />
            <ValidationMessage For="@(() => o.LastName)" />
        </div>
    </div>
    <div class="form-group">
        <label>Användarnamn :</label>
        <div>
            <InputText @bind-Value="@o.UserName" />
            <ValidationMessage For="@(() => o.UserName)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Lösenord :</label>
            <div>
                <InputText @bind-Value="@o.Password" />
                <ValidationMessage For="@(() => o.Password)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Epost :</label>
            <div>
                <InputText @bind-Value="@o.Email" />
                <ValidationMessage For="@(() => o.Email)" />
            </div>
        </div>
    </div>

    <div class="form-group ">
        <div>
            <label>Telefonnummer :</label>
            <div>
                <InputText @bind-Value="@o.Phone" />
                <ValidationMessage For="@(() => o.Phone)" />
            </div>
        </div>
    </div>

    <div class="form-group ">
        <div>
            <label>Stad operatör befinner sig just nu :</label>
            <div>
                <InputText @bind-Value="@o.Location" />
                <ValidationMessage For="@(() => o.Location)" />
            </div>
        </div>
    </div>
   
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
    <button class="btn btn-dark" @onclick="@GetBackOnePage">Ångra</button>
</EditForm>


@code {
    [Parameter] public Operators o { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Spara";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

    

    public void GetBackOnePage()
    {
        uriHelper.NavigateTo("operatorlist");
    }

}