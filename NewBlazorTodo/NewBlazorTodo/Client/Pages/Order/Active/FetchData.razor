@page "/activeorders"
@inject HttpClient client
@inject IJSRuntime js

<h3>Aktiva ordrar.</h3>
<small>Alla orders som operatörer jobbar med just nu.</small>


<br>

@if (activeOrderView == null)
{
    <text>Loading...</text>
}
else if (activeOrderView.Length == 0)
{
    <text>No Records Found.</text>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Operator Name</th>
                <th>Description </th>
                <th>Order Start</th>
                <th>Order Info</th>
                <th>Customer Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ActiveOrderView order in activeOrderView)
            {
                if (order.OrderComplete == false)
                {
            <tr>
                <td>@order.OpFirstName @order.OpLastName</td>
                <td>@order.OrderDescription</td>
                <td>@order.OrderStart</td>
                <td>@order.OrderInfo</td>
                <td>@order.Customer</td>
                <td></td>
                
            </tr>
                }

            }

        </tbody>
    </table>
}
@code {

    ActiveOrderView[] activeOrderView { get; set; }
   
    protected override async Task OnInitializedAsync()
    {
        activeOrderView = await client.GetFromJsonAsync<ActiveOrderView[]>("https://localhost:44374/api/activeorderview");

    }

}