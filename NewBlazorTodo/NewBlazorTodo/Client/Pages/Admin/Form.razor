@inject NavigationManager uriHelper
<EditForm Model="@admin" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Förnamn :</label>
        <div>
            <InputText @bind-Value="@admin.FirstName" />
            <ValidationMessage For="@(() => admin.FirstName)" />
        </div>
    </div>
    <div class="form-group">
        <label>Efternamn :</label>
        <div>
            <InputText @bind-Value="@admin.LastName" />
            <ValidationMessage For="@(() => admin.LastName)" />
        </div>
    </div>
    <div class="form-group">
        <label>Användarnamn :</label>
        <div>
            <InputText @bind-Value="@admin.UserName" />
            <ValidationMessage For="@(() => admin.UserName)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Lösenord :</label>
            <div>
                <InputText @bind-Value="@admin.Password" />
                <ValidationMessage For="@(() => admin.Password)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Epost :</label>
            <div>
                <InputText @bind-Value="@admin.Email" />
                <ValidationMessage For="@(() => admin.Email)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Telefonnummer :</label>
            <div>
                <InputText @bind-Value="@admin.Phone" />
                <ValidationMessage For="@(() => admin.Phone)" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
    <button class="btn btn-dark" @onclick="@GetBackOnePage">Ångra</button>

</EditForm>


@code {
    [Parameter] public Admins admin { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Skicka Faktura";
    [Parameter] public EventCallback OnValidSubmit { get; set; }

    public void GetBackOnePage()
    {
        uriHelper.NavigateTo("/ordershistory");
    }
}

