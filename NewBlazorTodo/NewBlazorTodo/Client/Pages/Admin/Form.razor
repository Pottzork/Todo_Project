<EditForm Model="@admin" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Username :</label>
        <div>
            <InputText @bind-Value="@admin.UserName" />
            <ValidationMessage For="@(() => admin.UserName)" />
        </div>
    </div>
    <div class="form-group">
        <label>Password :</label>
        <div>
            <InputText @bind-Value="@admin.Password" />
            <ValidationMessage For="@(() => admin.Password)" />
        </div>
    </div>
    <div class="form-group">
        <label>First Name :</label>
        <div>
            <InputText @bind-Value="@admin.FirstName" />
            <ValidationMessage For="@(() => admin.FirstName)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Last Name :</label>
            <div>
                <InputText @bind-Value="@admin.LastName" />
                <ValidationMessage For="@(() => admin.LastName)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Email :</label>
            <div>
                <InputText @bind-Value="@admin.Email" />
                <ValidationMessage For="@(() => admin.Email)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Experience :</label>
            <div>
                <InputText @bind-Value="@admin.Phone" />
                <ValidationMessage For="@(() => admin.Phone)" />
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>

</EditForm>


@code {
    [Parameter] public Admins admin { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}