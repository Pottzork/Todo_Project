<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinTodo.Pages.OrderDoneAddInfoPage">
    <ContentPage.Content>
        <Frame BackgroundColor="AntiqueWhite" CornerRadius="5">
            <StackLayout>
                <StackLayout BackgroundColor="#53dc98" HeightRequest="50">
                    <Label Text="Lägg till Information" HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" FontSize="30" />
                </StackLayout>
                
                <StackLayout>
                    <!--Lägg till label med rubrik-->
                    <Label Text="Order start:"/>
                    <Label x:Name="LabelOrderStart"/>
                    <Label Text="Order slut:"/>
                    <Label x:Name="LabelOrderEnd"/>
                </StackLayout>
                <Editor x:Name="txtOrderCompleteMessage" Placeholder="Vilket arbete har utförts?" Margin="40, 0" AutoSize="TextChanges"
                    VerticalOptions="StartAndExpand" />
                <Button Text="Skicka"
                    CornerRadius="15"
                    VerticalOptions="End"
                    Clicked="ConfirmInfo_Clicked" />
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>